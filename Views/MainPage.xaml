<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Temporizador.Views.MainPage"
             BackgroundColor="#FFFFFF"
             Title="">

<ScrollView>
    <VerticalStackLayout Padding="20,0,20,10" 
                     VerticalOptions="FillAndExpand">

        <!-- Timer Grande -->
        <Label x:Name="TempoRestanteLabel"
               Text="00:00:00"
               FontSize="72"
               FontAttributes="Bold"
               TextColor="#1A1A1A"
               HorizontalOptions="Center" />

        <Label x:Name="StatusLabel"
                Text="TEMPO RESTANTE"
                FontSize="14"
                TextColor="#888888"
                HorizontalOptions="Center"
                Margin="0,0,0,25" />

        <!-- Barra de Progresso Laranja – FUNCIONA 100% EM TODOS OS CELULARES -->
        <Grid HeightRequest="14" Margin="0,0,0,70" x:Name="BarraContainer">
            <!-- Fundo cinza arredondado -->
            <Border BackgroundColor="#EEEEEE"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
            </Border>

            <!-- Barra laranja (BoxView = mais estável que Border) -->
            <BoxView x:Name="BarraLaranja"
                    BackgroundColor="#FF6B35"
                    WidthRequest="0"
                    HeightRequest="14"
                    HorizontalOptions="Start"
                    VerticalOptions="FillAndExpand"
                    CornerRadius="10" />
        </Grid>

        <!-- Botões Amarelos (+1h, +10m, etc.) -->
        <Grid ColumnDefinitions="*,*,*,*,*" HeightRequest="60">
            <Border Grid.Column="0"
                    BackgroundColor="#FFD60A"
                    Stroke="#FFB000"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <!-- 1 hora = 3600 segundos -->
                    <TapGestureRecognizer Tapped="OnAddTimeClicked" CommandParameter="3600" />
                </Border.GestureRecognizers>
                <Label Text="+1h"
                       TextColor="Black"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       InputTransparent="True"
                       LineBreakMode="NoWrap" />
            </Border>

            <Border Grid.Column="1"
                    BackgroundColor="#FFD60A"
                    Stroke="#FFB000"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <!-- 10 minutos = 600 segundos -->
                    <TapGestureRecognizer Tapped="OnAddTimeClicked" CommandParameter="600" />
                </Border.GestureRecognizers>
                <Label Text="+10m"
                       TextColor="Black"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       InputTransparent="True"
                       LineBreakMode="NoWrap" />
            </Border>

            <Border Grid.Column="2"
                    BackgroundColor="#FFD60A"
                    Stroke="#FFB000"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <!-- 1 minuto = 60 segundos -->
                    <TapGestureRecognizer Tapped="OnAddTimeClicked" CommandParameter="60" />
                </Border.GestureRecognizers>
                <Label Text="+1m"
                       TextColor="Black"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       InputTransparent="True"
                       LineBreakMode="NoWrap" />
            </Border>

            <Border Grid.Column="3"
                    BackgroundColor="#FFD60A"
                    Stroke="#FFB000"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <!-- 30 segundos = 30 segundos -->
                    <TapGestureRecognizer Tapped="OnAddTimeClicked" CommandParameter="30" />
                </Border.GestureRecognizers>
                <Label Text="+30s"
                       TextColor="Black"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       InputTransparent="True"
                       LineBreakMode="NoWrap" />
            </Border>

            <Border Grid.Column="4"
                    BackgroundColor="#FFD60A"
                    Stroke="#FFB000"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <!-- 10 segundos = 10 segundos -->
                    <TapGestureRecognizer Tapped="OnAddTimeClicked" CommandParameter="10" />
                </Border.GestureRecognizers>
                <Label Text="+10s"
                       TextColor="Black"
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       InputTransparent="True"
                       LineBreakMode="NoWrap" />
            </Border>
        </Grid>

        <!-- Reset e Iniciar -->
        <Grid ColumnDefinitions="0.35*,0.65*" HeightRequest="68" Margin="0,0,0,25">

            <!-- Botão Reset -->
            <Border x:Name="BotaoReset"
                    Grid.Column="0"
                    BackgroundColor="#E74C3C"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                    <Image x:Name="BotaoResetIcon"
                           Source="reset.png"
                           WidthRequest="18"
                           HeightRequest="18"
                           VerticalOptions="Center" />
                    <Label x:Name="BotaoResetLabel"
                           Text="Reset"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnResetClicked" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Botão Iniciar -->
            <Border x:Name="BotaoIniciar"
                    Grid.Column="1"
                    BackgroundColor="#27AE60"
                    Margin="5"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                    <Image x:Name="BotaoIniciarIcon"
                           Source="play.png"
                           WidthRequest="18"
                           HeightRequest="18"
                           VerticalOptions="Center" />
                    <Label x:Name="BotaoIniciarLabel"
                           Text="Iniciar"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnStartClicked" />
                </Border.GestureRecognizers>
            </Border>
        </Grid>

        <BoxView HeightRequest="1"
                 HorizontalOptions="FillAndExpand"
                 Color="LightGray"
                 Margin="0,0,0,15" />

        <Grid x:Name="ReceitasContainer"
                RowSpacing="12"
                ColumnSpacing="12"
                ColumnDefinitions="*,*"
                Padding="0,0,0,20" >
            
        </Grid>
    </VerticalStackLayout>
</ScrollView>
</ContentPage>
